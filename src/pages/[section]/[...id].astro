---
import { getCollection, render } from 'astro:content'
import { Title } from '@patternfly/react-core'
import MainLayout from '../../layouts/Main.astro'
import { content } from "../../content"

export async function getStaticPaths() {
  const collections = await Promise.all(content.map(async (entry) => await getCollection(entry.name as any)))

  return collections.flat().map((entry) => ({
      params: { id: entry.id, section: entry.data.section },
      props: { entry, title: entry.data.title },
    })
  )
}

const { entry } = Astro.props
const { title } = entry.data
const { Content } = await render(entry)
---

<MainLayout>
  {
    title && (
      <Title headingLevel="h1" size="4xl">
        {title}
      </Title>
    )
  }
  <Content />
</MainLayout>
